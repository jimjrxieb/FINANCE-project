# âœ… SECURE CONFIGURATION TEMPLATE
# PCI-DSS Compliant: No default credentials, strong secrets required
# Copy this to .env and fill in actual values (never commit .env!)

# Database Configuration
# Generate strong password: openssl rand -base64 32
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=securebank
DATABASE_USER=securebank_app
DATABASE_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>

# Redis Configuration
# Generate strong password: openssl rand -base64 32
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>

# Application Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (minimum 32 characters)
# Generate: openssl rand -hex 32
JWT_SECRET=<GENERATE_JWT_SECRET_64_CHARS_HERE>

# Admin Credentials (create unique admin account)
# Use strong password manager generated credentials
ADMIN_USERNAME=<UNIQUE_ADMIN_USERNAME>
ADMIN_PASSWORD=<STRONG_PASSWORD_FROM_PASSWORD_MANAGER>

# Vault Configuration
# Production: Use HTTPS and dynamic tokens
VAULT_ADDR=https://vault.yourdomain.com:8200
VAULT_TOKEN=<GET_FROM_VAULT_AUTH_OR_K8S_SERVICE_ACCOUNT>

# Encryption Key (32 bytes hex = 64 characters)
# Generate: openssl rand -hex 32
ENCRYPTION_KEY=<GENERATE_AES256_KEY_HERE>

# Logging
LOG_LEVEL=info
# Never log sensitive data in production
LOG_SENSITIVE_DATA=false